
@{
    ViewBag.Title = "GenrePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .section {
        text-align: left; /* Căn giữa nội dung */
        padding: 90px 30px;
        background-color: rgba(25, 26, 28, 1);
        color: white;
        z-index: 1;
    }

    .comic-details {
        margin-top: -400px; /* Dịch chuyển phần tử lên trên */
        padding: 0 20px 0 20px;
    }

    .btn {
        background-color: #4CAF50; /* Màu nền */
        border: none; /* Không có viền */
        color: white; /* Màu chữ */
        padding: 10px 20px; /* Kích thước nút */
        text-align: center; /* Căn giữa văn bản */
        text-decoration: none; /* Không gạch chân */
        display: inline-block;
        font-size: 16px; /* Kích thước chữ */
        margin: 4px 2px; /* Khoảng cách giữa các nút */
        cursor: pointer; /* Con trỏ khi di chuột */
        border-radius: 10px; /* Bo góc */
    }

    table {
        table-layout: fixed;
        border-collapse: collapse;
        width: 100%;
    }

    .list {
        border: 1px solid white;
        text-align: center;
        width: 100%;
        height: 50px;
    }

        .list .genre {
            display: block;
            width: 100%;
            height: 100%;
            font-size: 20px;
            text-decoration: none;
            color: white;
        }

        .list:hover, .genre:hover {
            border: 1px solid white;
            font-size: 20px;
            text-decoration: none;
            background: white;
            color: black;
        }
</style>

<div class="section">
    <div class="comic-details">
        <div>
            <h1>DANH SÁCH CÁC THỂ LOẠI</h1>
        </div>
        <table>
            <tr>
                @foreach (var a in ViewBag.listGenre)
                {
                    <td class="list" onclick="document.getElementById('link').click()">
                        <a href="~/Home/ResultGenrePage?id=@a[0]" id="link" class="genre">
                            @a[1]
                        </a>
                    </td>
                }
            </tr>
        </table>
    </div>
</div>

