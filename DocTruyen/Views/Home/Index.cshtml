@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-page-show-container-new-comic {
        margin: auto;
        height: auto;
        width: 80%;
        background-color: rgba(52, 54, 59, 0.6);
        padding: 20px;
        color: white;
        display: flex; /* Sử dụng display: flex; để hiển thị các phần tử con theo hàng ngang */
        flex-wrap: wrap; /* Cho phép các phần tử con xuống dòng khi không còn đủ không gian */
        justify-content: flex-start; /* Các phần tử con sẽ được căn giữa và có khoảng trống giữa chúng */
    }

    a {
        color: white;
        text-decoration: none;
    }

    .card-show-comic {
        margin-right: 5rem;
        border: 1px solid white;
        border-radius: 5px;
        width: 215px;
        box-sizing: border-box; /* Kích thước của các thẻ bao gồm cả padding và border */
    }

        .card-show-comic img {
            width: 100%; /* Hình ảnh sẽ chiếm toàn bộ chiều rộng của thẻ */
            height: 100%; /* Đảm bảo tỷ lệ khung hình bảo toàn */
            object-fit: cover;
        }

    /*.card-show-comic {
        border: 1px solid white;
        width: 15%;
        border-radius: 5px;
        margin: 10px 0 0 10px;
    }

        .card-show-comic img {
            border-radius: 5px 5px 0 0;
        }*/

    .container-comic {
        padding: 2px 10px;
    }

    .card-show-comic:hover {
        cursor: pointer;
    }

</style>

<section class="main-page-show-comic">
    <div class="main-page-show-container-comic">
        <h3 class="main-page-show-container-comic-big-title">TRUYỆN MỚI NHẤT</h3>
        <div class="main-page-show-container-new-comic">
            @foreach (var a in ViewBag.list)
            {
                <a href="~/Home/ComicDetail?id=@a[0]"style="text-decoration: none;">
                    <div class="card-show-comic">
                        <img src="~/img/@a[3]" alt="Avatar" style="height: 322px;">
                        <div class="container-comic">
                            <h4>
                                <b>@a[1]</b>
                            </h4>
                            <p>@a[10]</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>
